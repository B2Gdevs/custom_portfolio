{
  "name": "@portfolio/dialogue-forge",
  "version": "0.1.0",
  "description": "Visual node-based dialogue editor with Yarn Spinner support",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "bin": {
    "dialogue-forge": "./bin/dialogue-forge.js"
  },
  "files": [
    "dist",
    "demo",
    "bin",
    "README.md"
  ],
  "scripts": {
    "build": "tsc && tsc --module esnext --outDir dist/esm",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "keywords": [
    "dialogue",
    "editor",
    "yarn-spinner",
    "node-graph",
    "interactive-fiction"
  ],
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "dependencies": {
    "react-tooltip": "^5.30.0"
  },
  "devDependencies": {
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/ui": "^2.0.0",
    "typescript": "^5.0.0",
    "vitest": "^2.0.0"
  }
}
